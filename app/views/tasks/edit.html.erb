<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white shadow-xl sm:rounded-lg overflow-hidden">
    <div class="px-6 py-8 sm:px-8 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Task</h1>
          <p class="mt-2 text-sm text-gray-500">Update the task details below.</p>
        </div>
        <%= link_to list_path(@list), class: "text-gray-400 hover:text-gray-500" do %>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>
    </div>


    <div class="px-6 py-8 sm:px-8">
      <%= form_with(model: [@list, @task], class: "space-y-8") do |form| %>
        <div class="space-y-6">
          <div>
            <%= form_label form, :title, "Task Title" %>
            <div class="mt-2">
              <%= form.text_field :title, 
                  class: input_classes(@task, :title, "form-input-base block w-full sm:text-lg") %>
              <%= input_error_message(@task, :title) %>
            </div>
          </div>

          <div>
            <%= form_label form, :description, "Task Description" %>
            <div class="mt-2">
              <%= form.text_area :description, rows: 5, 
                  class: input_classes(@task, :description, "form-input-base block w-full sm:text-lg") %>
              <%= input_error_message(@task, :description) %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Write a detailed description of the task.</p>
          </div>

          <div class="flex items-center">
            <%= form.check_box :completed, 
                class: "h-5 w-5 rounded #{@task.errors[:completed].any? ? 'border-red-300 text-red-600 focus:ring-red-500' : 'border-gray-300 text-indigo-600 focus:ring-indigo-500'}" %>
            <%= form.label :completed, "Mark as completed", class: "ml-3 block text-base text-gray-700" %>
            <%= input_error_message(@task, :completed) %>
          </div>
        </div>

        <div class="flex justify-end space-x-4 pt-8 border-t border-gray-200">
          <%= link_to "Cancel", list_path(@list), 
              class: "inline-flex items-center px-6 py-3 border border-gray-300 rounded-md shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= form_submit form, "Update Task" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-8">
  </div>
</div> 