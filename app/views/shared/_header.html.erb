<header class="bg-indigo-600 text-white p-4">
  <div class="container mx-auto flex justify-between items-center">
    <%= link_to root_path, class: "text-xl font-bold hover:text-blue-600 transition-colors" do %>
      Task Manager
    <% end %>
    <div class="flex items-center">
      <% if current_user %>
        <span class="mr-4">Connecté en tant que : <%= current_user.username %></span>
        <%= button_to "Se déconnecter", session_path, method: :delete, data: { turbo_confirm: "Êtes-vous sûr de vouloir vous déconnecter ?" }, class: "text-white underline" %>
      <% else %>
        <span>Non connecté</span>
      <% end %>
    </div>
  </div>
</header> 